{
  "name": "react-native-hook-form-view",
  "description": "React Native Form component that leverage on react-hook-form feature",
  "version": "0.0.3",
  "license": "MIT",
  "author": "Louis Loo <louiskhenghao@gmail.com> (https://github.com/louiskhenghao)",
  "homepage": "https://github.com/louiskhenghao/react-native-hook-form-view#readme",
  "keywords": [
    "form",
    "form-validation",
    "react",
    "native",
    "react-native",
    "react-native-web",
    "react-hook-form",
    "react-component"
  ],
  "private": false,
  "main": "dist/index.js",
  "source": "src/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "watch": "concurrently \"tsc -w -p tsconfig.json\"",
    "clean": "rimraf dist",
    "eslint": "eslint . --ext .ts,.tsx",
    "eslint-fix": "eslint --fix . --ext .ts,.tsx",
    "prettier": "prettier --write .",
    "cz": "git-cz",
    "prepublish": "npm run build"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hook-form": "^7.27.0",
    "react-native": "0.66.3",
    "styled-components": "5.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@commitlint/prompt": "^11.0.0",
    "@types/react": "17.0.30",
    "@types/react-native": "0.66.3",
    "@types/styled-components": "^5.1.23",
    "@types/styled-components-react-native": "^5.1.3",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "commitizen": "^4.2.2",
    "concurrently": "^5.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.12.1",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.0",
    "prettier": "^2.1.2",
    "typescript": "^4.1.5"
  }
}
